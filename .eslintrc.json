{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "overrides": [
        {
            "files": [
                "**/*.js?(x)"
            ],
            "rules": {
                "react/no-unescaped-entities": "off",
                "react/display-name": "off",
                "react/prop-types": "off"
            }
        }
    ]
}
